{
  "name": "@tadashi/koa-error",
  "version": "4.1.1",
  "description": "Middleware for Koa.js",
  "main": "index.js",
  "files": [
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "report": "nyc report --reporter=text-lcov | coveralls",
    "pretest": "xo",
    "test": "NODE_ENV=test ava --serial",
    "pretest-cov": "npm run pretest",
    "test-cov": "NODE_ENV=test nyc ava --serial"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/lagden/koa-error.git"
  },
  "keywords": [
    "koa",
    "middleware",
    "error",
    "handler"
  ],
  "author": "Thiago Lagden",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lagden/koa-error/issues"
  },
  "homepage": "https://github.com/lagden/koa-error#readme",
  "xo": {
    "envs": [
      "node"
    ],
    "semicolon": false,
    "rules": {
      "camelcase": [
        "error",
        {
          "properties": "never"
        }
      ],
      "capitalized-comments": 0
    }
  },
  "devDependencies": {
    "ava": "0.25.0",
    "hash-to-port": "1.0.0",
    "koa": "2.5.1",
    "nyc": "12.0.2",
    "supertest": "3.1.0",
    "xo": "0.21.1"
  }
}
