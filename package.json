{
  "name": "@tadashi/koa-error",
  "version": "8.0.0",
  "description": "Middleware for Koa.js",
  "main": "index.js",
  "files": [
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "report": "nyc report --reporter=text-lcov | coveralls",
    "pretest": "xo",
    "test": "ava"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/lagden/koa-error.git"
  },
  "keywords": [
    "koa",
    "middleware",
    "error",
    "handler"
  ],
  "author": "Thiago Lagden",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lagden/koa-error/issues"
  },
  "homepage": "https://github.com/lagden/koa-error#readme",
  "xo": {
    "envs": [
      "node"
    ],
    "semicolon": false,
    "rules": {
      "camelcase": [
        "error",
        {
          "properties": "never"
        }
      ],
      "capitalized-comments": 0,
      "padding-line-between-statements": 0,
      "unicorn/prevent-abbreviations": 0
    }
  },
  "peerDependencies": {
    "koa": ">=2"
  },
  "devDependencies": {
    "ava": "3.15.0",
    "hash-to-port": "1.2.0",
    "koa": "2.13.1",
    "supertest": "6.1.3",
    "xo": "0.38.2"
  }
}
